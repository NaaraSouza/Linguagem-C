#include <stdio.h>

int main()

//Mostrar notas usando vetores 

{ //VETORES (ARRAYS)

    float notas[10];//colocamos dentro dos conchetes a quantidade de dados que queremos.

    for(int i=0; i<10; i++){ //i=0 (Está inserindo uma nova variável\0, o i++ (Está falano que vai ter que ir incrementando))
        printf("Informe a nota %i: ",i+1);
        scanf("%f",&notas[i]);
    }
    
    
    //Para emitir as notas
    
    for(int i=0; i<10; i++){
        printf("\nNota %i:%1.f", i+1, notas[i]);
    }
    
    
 


    return 0;
}
